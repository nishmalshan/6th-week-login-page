      }
      
      .bs-icon-xs {
        --bs-icon-size: 1rem;
        width: calc(var(--bs-icon-size) * 1.5);
        height: calc(var(--bs-icon-size) * 1.5);
      }
      
      .bs-icon-sm {
        --bs-icon-size: 1rem;
      }
      
      .bs-icon-md {
        --bs-icon-size: 1.5rem;
      }
      
      .bs-icon-lg {
        --bs-icon-size: 2rem;
      }
      
      .bs-icon-xl {
        --bs-icon-size: 2.5rem;
      }
      
      .bs-icon.bs-icon-primary {
        color: var(--bs-white);
        background-color: #a70442;
      }
      
      .bs-icon.bs-icon-primary-light {
        color: var(--bs-primary);
        background: rgba(var(--bs-primary-rgb), .2);
      }
      
      .bs-icon.bs-icon-semi-white {
        color: var(--bs-primary);
        background: rgba(255, 255, 255, .5);
      }
      
      .bs-icon.bs-icon-rounded {
        border-radius: .5rem;
      }
      
      .bs-icon.bs-icon-circle {
        border-radius: 50%;
      }
      body{
        background-image: url(https://img.freepik.com/free-vector/background-line-abstract-gradient-luxury_483537-3107.jpg?w=826&t=st=1705467270~exp=1705467870~hmac=01a5fa3971590ad85a25f5142b3632c11bd95dea9a45e1291a52b083e9ab4c80);
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        width: 100%;
        height: 100vh;
      }
      
      
</style>
</head>

<body>
    <section class="py-4 py-xl-5">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-8 col-xl-6 text-center mx-auto">
                    <h2 class="text-white">Log in</h2>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 col-xl-4">
                    <div class="card mb-5">
                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="bs-icon-xl bs-icon-circle bs-icon-primary bs-icon my-4"><svg xmlns="http://www.w3.org/2000/svg"  width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person">
